$maxPreviewHeight = 300px


.g-widget-item-previews-header
  background-color #f0f0f0
  color #555
  font-size 16px
  font-weight bold
  margin-top 10px
  margin-bottom 10px
  padding 5px 6px

.g-widget-item-previews-container
  max-height 400px
  overflow-x auto
  white-space nowrap
  &.g-wrap
    white-space normal

.g-widget-item-preview
  margin 10px
  margin-top 0
  padding-bottom 5px
  border-bottom 1px solid #eee

  img
    max-height $maxPreviewHeight
    border-radius 5px
    width auto

  .json
    background-color #f5f5f5
    border-radius 4px
    border 1px solid #ccc
    color #333
    height $maxPreviewHeight
    width calc(100% - 100px)
    margin-left 50px
    resize both
    white-space nowrap
